<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:admin="wonderland.view.admin.*"  width="100%" height="100%" xmlns:view="wonderland.view.*" backgroundAlpha="0">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Move id="tremmor" duration="400" xFrom="10" xTo="0" easingFunction="{Elastic.easeOut}"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.effects.easing.Elastic;
			

			
			[Bindable] private var itemDP:ArrayCollection = new ArrayCollection();
			
			public function addMenuItem(o:Object):void{
				itemDP.addItem(o);
			}
			
			private function openView(e:Event):void{
				if (entityList.selectedItem!=null){
					var me:MenuEvent = new MenuEvent(MenuEvent.OPEN);
					me.data = entityList.selectedItem;
					this.dispatchEvent(me);	
				}
				
			}
			
		]]>
	</fx:Script>
	<view:SmoothScrollingList id="entityList" x="0" y="0" width="100%" height="100%" click="openView(event)" labelField="name" fontSize="13" 
							   textAlign="left" dataProvider="{itemDP}" borderAlpha="1.0" contentBackgroundAlpha="0.0" >
		<view:itemRenderer>
			<fx:Component>
				<mx:Canvas  width="100%" height="60"  horizontalScrollPolicy="off" verticalScrollPolicy="off" borderStyle="solid" >
					
					<s:HGroup x="0" y="0" width="100%" verticalAlign="middle" height="100%" 
							  mouseDownEffect="{outerDocument.tremmor}">
						<mx:Spacer/>
						
						<mx:Image width="32" height="32" scaleContent="true" source="{data.icon}"/>
						<s:Label width="100%" text="{data.name}"/>	
						
						<mx:Spacer/>
					</s:HGroup>	
				</mx:Canvas>
				
				
			</fx:Component>
		</view:itemRenderer>
	</view:SmoothScrollingList>
</s:NavigatorContent>
